{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint:verify",
      "npm run prettier:verify",
      "npm test"
    ]
  },
  "github": {
    "release": true,
    "assets": ["**/*spdx.json"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  }
}
